{
	"name": "river/api",
	"description": "Slim PHP API backend for the River project",
	"type": "project",
	"require": {
		"php": "^8.2",
		"slim/slim": "^4.12",
		"slim/psr7": "^1.6",
		"nyholm/psr7": "^1.8",
		"vlucas/phpdotenv": "^5.6",
		"php-di/php-di": "^7.0"
	},
	"require-dev": {
		"symfony/var-dumper": "^7.0"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/",
			"App\\Bootstrap\\": "bootstrap/"
		}
	},
	"scripts": {
		"start": "php -S 0.0.0.0:8080 -t public public/index.php"
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"php-http/discovery": true
		}
	}
}
